<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EdTech Website</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <%- include('navbar') %>

    <!-- Hero Section -->
    <header class="bg-blue-400 py-16">
      <div class="container mx-auto text-center">
        <h1 class="text-4xl md:text-6xl text-white font-semibold mb-6">
          Unlock Your Learning Potential
        </h1>
        <p class="text-lg md:text-xl text-white mb-10">Learn, Grow, Succeed</p>
        <a
          href="#target-section"
          class="bg-white text-blue-600 hover:py-5 py-3 px-8 rounded-md font-medium"
          >Get Started</a
        >
        <a
          href="/createCourse"
          class="bg-white text-blue-600 hover:py-5 py-3 px-8 rounded-md font-medium"
          >Create Course</a
        >
      </div>
    </header>

    <!-- Features Section -->
    <section class="py-16 bg-gray-100">
      <div class="container mx-auto">
        <h2 class="text-3xl md:text-4xl text-center font-semibold mb-8">
          Why Choose Us?
        </h2>
        <div class="flex flex-col md:flex-row md:justify-between">
          <div class="max-w-md mx-auto md:mx-0 mb-8 md:mb-0">
            <img
              class="w-82 h-64 mx-auto mb-4"
              src="https://img.freepik.com/free-vector/organic-flat-people-business-training_23-2148909572.jpg?size=626&ext=jpg&ga=GA1.2.713668693.1685668411&semt=ais"
              alt="Feature 2"
            />
            <h3 class="text-xl text-center font-semibold mb-2">
              Expert Instructors
            </h3>
            <p class="text-center text-gray-700">
              Learn from industry experts who are passionate about teaching and
              guiding you.
            </p>
          </div>
          <div class="max-w-md mx-auto md:mx-0 mb-8 md:mb-0">
            <img
              class="w-82 h-64 mx-auto mb-4"
              src="https://img.freepik.com/free-vector/online-tutorials-concept_52683-37480.jpg?w=2000"
              alt="Feature 1"
            />
            <h3 class="text-xl text-center font-semibold mb-2">
              Interactive Courses
            </h3>
            <p class="text-center text-gray-700">
              Engage in interactive courses designed to enhance your learning
              experience.
            </p>
          </div>
          <div class="max-w-md mx-auto md:mx-0">
            <img
              class="w-82 h-64 mx-auto mb-4"
              src="https://img.freepik.com/premium-vector/digital-electronic-online-education-training-by-phone-from-mobile-website-distance-learning-concept-online-courses-home-teaching_110633-1194.jpg?w=2000"
              alt="Feature 3"
            />
            <h3 class="text-xl text-center font-semibold mb-2">
              Flexible Learning
            </h3>
            <p class="text-center text-gray-700">
              Study at your own pace and access course materials from anywhere,
              anytime.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Testimonials Section -->
    <section class="py-16 bg-white">
      <div class="container mx-auto">
        <h2 class="text-3xl md:text-4xl text-center font-semibold mb-8">
          What Our Students Say
        </h2>
        <div class="flex flex-col md:flex-row md:justify-between">
          <div class="max-w-md mx-auto md:mx-0 mb-8 md:mb-0">
            <div class="bg-blue-600 text-white py-6 px-8 rounded-md mb-4">
              <p class="text-lg">
                "I had an amazing learning experience with EdTech. The courses
                were well-structured and the instructors were highly
                knowledgeable. I highly recommend it!"
              </p>
              <p class="mt-4 font-semibold">John Doe</p>
            </div>
          </div>
          <div class="max-w-md mx-auto md:mx-0">
            <div class="bg-blue-600 text-white py-6 px-8 rounded-md mb-4">
              <p class="text-lg">
                "EdTech helped me acquire new skills and advance my career. The
                platform is user-friendly and the support team is always
                helpful. Thank you!"
              </p>
              <p class="mt-4 font-semibold">Jane Smith</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section id="target-section" class="py-16 bg-gray-100">
      <div class="container mx-auto">
        <h2 class="text-3xl md:text-4xl text-center font-semibold mb-8">
          Course Catalog
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mx-2">
          <% for (let i = 0; i < upcomingCourses.length; i++) { %>
          <div class="bg-white rounded-md shadow-lg">
            <img
              class="w-full h-64 object-cover rounded-t-md"
              src="<%= upcomingCourses[i].image %>"
              alt="Course <%= i + 1 %>"
            />
            <div class="p-6">
              <h3 class="text-xl text-blue-600 font-semibold mb-2">
                <%= upcomingCourses[i].title %>
              </h3>
              <p class="text-gray-700 mb-4">
                <%= upcomingCourses[i].description %>
              </p>
              <a
                href="/course/<%= upcomingCourses[i].id %>"
                class="text-blue-600 hover:underline"
                >Learn More</a
              >
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </section>

    <script>
      // JavaScript to handle smooth scrolling when the link is clicked
      document
        .querySelector('a[href="#target-section"]')
        .addEventListener("click", function (e) {
          e.preventDefault();
          const targetSection = document.querySelector("#target-section");
          targetSection.scrollIntoView({ behavior: "smooth" });
        });
    </script>

    <!-- Footer -->
    <footer class="bg-blue-600 py-8">
      <div class="container mx-auto text-white text-center">
        <p>&copy; 2023 EdTech. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
